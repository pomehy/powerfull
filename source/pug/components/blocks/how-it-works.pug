mixin how-it-works()
  section.how-it-works.page-section(id="how-it-works", data-section)
    .page-section__trigger(data-section-trigger)
    .page-section__header
      .container
        .page-section__title-wrapper
          .page-section__title-bg.title-h1(data-title-bg) How it works
          h2.page-section__title.title-h2(data-sal="slide-up", data-sal-duration="600", data-sal-delay="200") How it works

    .page-section__body
      .container
        .how-it-works__grid
          .how-it-works__image-wrapper
            .how-it-works__phone(data-phone="parent")
              +picture('content', 'iphone-12-pro-max', 'png', 276, 560, 'iPhone 12 Pro Max').how-it-works__phone-img
              +icon("logo", 200, 57).logo
              .how-it-works__phone-container
                .how-it-works__image(data-phone="image", data-index="1", data-image-lazy)
                  +picture-lazy('content/how-it-works', 'how-it-works-1', 'jpg', 276, 560, 'Your perfect coach')
                .how-it-works__image(data-phone="image", data-index="2", data-image-lazy)
                  +picture-lazy('content/how-it-works', 'how-it-works-2', 'jpg', 276, 560, 'CUSTOM WORKOUTS')
                .how-it-works__image(data-phone="image", data-index="3", data-image-lazy)
                  +picture-lazy('content/how-it-works', 'how-it-works-3', 'jpg', 276, 560, 'PERSONALIZED NUTRITION')
                .how-it-works__image(data-phone="image", data-index="4", data-image-lazy)
                  +picture-lazy('content/how-it-works', 'how-it-works-4', 'png', 276, 560, 'ACCOUNTABILITY')
                  +picture-lazy('content/how-it-works', 'how-it-works-4-mob', 'jpg', 276, 560, 'ACCOUNTABILITY').is-mobile
          .how-it-works__list(data-how-it-work="list")
            each item, index in howItWorksItems
              article.content-item(data-how-it-work="item")
                .content-item__number 0!{index+1}
                .content-item__subtitle.text-big.text-uppercase.text-accent !{item.subtitle}
                h3.content-item__title.title-h3 !{item.title}
                p.content-item__description.text-md !{item.text}
                ul.content-item__list
                  each listItem in item.list
                    li.text
                      span !{listItem}
                      +icon('icon-marker', 22, 22).icon-marker
                .content-item__footer
                  +button({text: "Get started"})(data-open-modal="main-form")

doctype html

include ../components

block variables

html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Whatever your goals are, we accomplish them together")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    <link rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
    <link rel="manifest" href="favicon/site.webmanifest" crossorigin="use-credentials">
    <link rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#090707">
    <meta name="msapplication-TileColor" content="#090707">
    <meta name="theme-color" content="#ffffff">
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload" href="fonts/urbanist-black.woff2" as="font" crossorigin="anonymous")
    link(rel="preload" href="fonts/urbanist-regular.woff2" as="font" crossorigin="anonymous")
    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content= "Powerful team - ONLINE FITNESS COACHING")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="img/content/opengraph.jpg")
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="630">
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="http://powerful-team.com/")
      //- Введите описание
      meta(property="og:description", content="Whatever your goals are, we accomplish them together")

    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods, data-scroll-container, id="top")
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    //- script(src="js/SmoothScroll.js" crossorigin="anonymous")
    script(src="js/vendor.min.js")
    script(src="js/main.min.js")

extends ../components/base/layout

block variables
  - const title = "Powerful team - ONLINE FITNESS COACHING"
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks
  - const openGraf = true

block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +preloader()
    +scroll-translator()
    +intro()
    +about()
    +expertise()
    +expertise-footer-text()
    +services()
    +how-it-works()
    +pricing()
    +reviews()
    +button-to-top()

block modals
  +modal("modal--main-form")(data-modal="main-form")
    +modal-main-form()
  +modal("modal--success")(data-modal="success-form").modal--responsive
    +modal-success()
